<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    >
<ImageView
    android:id="@+id/img_no_service"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/img_no_service"
    android:layout_centerHorizontal="true"
    />
    <TextView
        android:id="@+id/tv_no_service"
        android:layout_below="@id/img_no_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="亲，没有找到该城市范围内相关分类店铺"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/gray"/>
    <Button
        android:layout_below="@id/tv_no_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商家入驻"
        android:background="@drawable/order_share_red_btn"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"/>

</RelativeLayout>