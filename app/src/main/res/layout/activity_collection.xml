<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.qianfeng.android.myapp.activity.CollectionActivity">

    <ImageView
        android:id="@+id/collection_service_back_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:src="@drawable/back_red" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_height"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/collection_top"
        android:textSize="@dimen/big_text_size"
        android:textStyle="bold" />
    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        android:id="@+id/collection_gv"
        android:numColumns="2"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:padding="5dp"
        android:stretchMode="columnWidth"
        android:background="@color/backColor"
        android:layout_below="@id/collection_service_back_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
