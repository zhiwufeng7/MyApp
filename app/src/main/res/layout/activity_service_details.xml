<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qianfeng.android.myapp.activity.ServiceDetailsActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/service_details_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/service_details_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="123"
                />
            <TextView
                android:id="@+id/service_details_priceUnit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/service_details_price_tv"
                android:text="元/项"
                android:layout_marginLeft="2dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/takeout_bg_btn_increase_focus"/>
        </RelativeLayout>
        <TextView
            android:layout_below="@id/service_details_rl"
            android:id="@+id/service_details_null_tv"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#F5F5F5"/>
        <LinearLayout
            android:layout_below="@id/service_details_null_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/service_time"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

</RelativeLayout>
