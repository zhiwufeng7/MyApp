<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:padding="2dp"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/child_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/child_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/child_item_iv"
        android:singleLine="true" />

    <TextView
        android:id="@+id/child_item_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/child_item_tv_name"

        android:textColor="@color/red"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/child_item_tv_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/child_item_tv_price"
        android:layout_toRightOf="@id/child_item_tv_price"
        android:textColor="@color/red" />

    <TextView
        android:id="@+id/child_item_tv_serviceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:drawableLeft="@drawable/img_store_icon" />
</RelativeLayout>