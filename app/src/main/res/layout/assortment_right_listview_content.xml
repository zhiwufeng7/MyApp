<?xml version="1.0" encoding="utf-8"?><!--create by chengxiao-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/assortment_right_content_null_tv"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#D5D5D5" />

    <ImageView
        android:id="@+id/assortment_right_content_icon_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@color/white">

        <TextView
            android:id="@+id/assortment_right_content_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="name"
            android:textColor="#4C4C4C"
            android:textSize="@dimen/normal_text_size" />

        <ImageView
            android:id="@+id/assortment_right_content_ticket1_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/assortment_right_content_name_tv" />

        <ImageView
            android:id="@+id/assortment_right_content_ticket2_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/assortment_right_content_ticket1_iv" />

        <TextView
            android:id="@+id/assortment_right_content_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assortment_right_content_name_tv"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="description"
            android:textSize="@dimen/min_text_size" />

        <TextView
            android:id="@+id/assortment_right_content_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assortment_right_content_description_tv"
            android:layout_marginTop="3dp"
            android:text="123"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/assortment_right_content_price_unit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/assortment_right_content_price_tv"
            android:layout_below="@id/assortment_right_content_description_tv"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/assortment_right_content_price_tv"
            android:text="元/项"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/micro_text_size" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assortment_right_content_description_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/assortment_right_content_price_unit_tv">

            <TextView
                android:id="@+id/assortment_right_content_originalPrice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/micro_text_size" />

            <TextView
                android:id="@+id/assortment_right_content_null_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/gray" />
        </FrameLayout>

        <ImageView
            android:id="@+id/assortment_right_content_store_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assortment_right_content_price_tv"
            android:paddingTop="5dp"
            android:src="@drawable/img_store_icon" />

        <TextView
            android:id="@+id/assortment_right_content_serviceTitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/assortment_right_content_price_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/assortment_right_content_store_iv"
            android:text="serviceTitle"
            android:textSize="@dimen/min_text_size" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/assortment_right_content_price_tv"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/assortment_right_content_Buy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售"
                android:textSize="@dimen/min_text_size" />

            <TextView
                android:id="@+id/assortment_right_content_salednum_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/assortment_right_content_Buy_tv"
                android:paddingRight="5dp"
                android:text="0"
                android:textSize="@dimen/min_text_size" />

            <TextView
                android:id="@+id/assortment_right_content_positiveCommentRate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/assortment_right_content_salednum_tv"
                android:textSize="@dimen/min_text_size" />
        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>